%h1= t("words.source", count: 2)

%table.table.table-striped.table-hover.table-responsive
  %thead
    %tr
      %th= t("words.name")
      %th= t("words.url")
      %th= t("words.tag", count: 2)
      %th= t("words.last_update")
      %th
      %th
      %th

  %tbody
    - @sources.each do |source|
      %tr
        %td= source.name
        %td= source.url
        %td= source.tagslist
        %td= source.last_update
        %td= link_to '', source, class: "btn btn-info glyphicon glyphicon-eye-open"
        %td= link_to '', edit_source_path(source), class: "btn btn-warning glyphicon glyphicon-edit"
        %td= link_to '', source, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger glyphicon glyphicon-trash"

= link_to '', new_source_path, class: "btn btn-primary glyphicon glyphicon-plus"
