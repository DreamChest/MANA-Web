= simple_form_for(@source, remote: true, html: { class: 'dyn-form', for: 'source' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :url
    = f.input :tagslist_attr, input_html: { value: Tag.list, default_values: @source.tagslist }

  .form-actions
    = f.button :submit, class: 'btn btn-primary load'
    = image_tag 'loading.gif', class: 'loading-icon'

:javascript
  $(document).ready(handleSelectize);
