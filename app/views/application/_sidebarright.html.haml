%ul.sidebar-nav
  %li.sidebar-brand= t("sidebar.tag_filtering")
  - Tag.all.each do |t|
    %li
      = check_box_tag t.name, t.name, false, { class: "tag_cb", url: entries_path(tags: "") }
      = t.name

:javascript
  $(document).ready(function() {
    $(document).on("click", ".tag_cb", handle_tag_filtering);
  });
