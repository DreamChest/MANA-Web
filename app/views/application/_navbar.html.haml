:javascript
  $(document).ready(function() {

    var loc = location.pathname;
    if(loc=="/") loc = "/entries";

    $('navbar-nav.li.active').removeClass('active');
    $('a[href="'+loc+'"]').closest('li').addClass('active');
  });

