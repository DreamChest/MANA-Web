.panel-group#accord#entries
  - entries.each do |e|
    - collapse_id = "#{e.id}"
    %div{ class: "panel panel-default entry #{e.source.tagslist.gsub(',', ' ')}", date: e.date.strftime("%Y-%m-%d %H:%M:%S") }
      .panel-heading
        %a{href: "##{collapse_id}", class: "feedtitle", data: { toggle: "collapse", parent: "#accord" }}
          = e.source.name
          \|
          = e.title
        %div.tags
          = e.source.tagslist.gsub(",", ", ")
        %div.right
          = link_to t("words.open").downcase, e.url, class: "small", target: "_blank"
          .small= I18n.localize(e.date, format: :long)
      %div{ class: "panel-collapse collapse", id: collapse_id }
        .panel-body

#load-more-div
  - if filter_type.nil?
    = link_to t("words.show_more"), entries_path, class: "btn btn-default", id: "load-more-btn"
  - elsif filter_type.eql?("tags")
    = link_to t("words.show_more"), entries_path(tags: filter), class: "btn btn-default", id: "load-more-btn"
  - else
    = link_to t("words.show_more"), entries_path(source: filter), class: "btn btn-default", id: "load-more-btn"
  %a#totop.btn.btn-default
    %i.fa.fa-arrow-up
  = image_tag "loading.gif", class: "loading-icon"


:javascript
  $(document).ready(entries_js);
