.panel-group#accord#entries
  - entries.each do |e|
    - collapse_id = "#{e.id}"
    %div{ class: "panel panel-default entry", date: e.date.strftime("%Y-%m-%d %H:%M:%S") }
      .panel-heading
        %a{href: "##{collapse_id}", class: "feedtitle", data: { toggle: "collapse", parent: "#accord" }}
          = image_tag e.source.favicon || "", class: "favicon", atl: e.source.name, title: e.source.name #TODO: add default favicon
          \|
          = e.title
        %div.tags
          = e.source.tagslist.gsub(",", ", ")
        %div.right
          = link_to t("words.open").downcase, e.url, class: "small", target: "_blank"
          .small= I18n.localize(e.date, format: :long)
      %div{ class: "panel-collapse collapse", id: collapse_id }
        .panel-body

:javascript
  $(document).ready(entries_js);
